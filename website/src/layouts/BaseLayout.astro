---
interface Props {
    lang: string;
    title: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

        <link
            rel="preload"
            href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
            as="style"
            onload="
            this.onload = null; this.rel = 'stylesheet'
            "
        /> -->

        <link rel="preconnect" href="https://rsms.me/" crossorigin />

        <link
            rel="preload"
            href="https://rsms.me/inter/inter.css"
            as="style"
            onload="
            this.onload = null; this.rel = 'stylesheet'
            "
        />
        <noscript>
            <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
        </noscript>

        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    :root {
        /* --main-bg-color: hsl(0, 0%, 7%); */
        --main-bg-color: hsl(222, 47%, 11%);
        --main-headline: hsl(0, 0%, 100%);
        --secondary-headline-color: hsl(245, 25%, 60%);
        --text-color: hsl(245, 20%, 76%);
        --text-emphasis-color: hsl(214, 32%, 91%);
        --text-label-color: hsl(46, 100%, 50%);
        --link-color: hsl(214, 32%, 91%);
        --hover-link-color: hsl(46, 100%, 50%);
        --hover-content-large-screen: rgba(175, 172, 205, 0.1);
        --label-bg-color: hsl(46, 100%, 50%, 0.1);
        --image-border: hsl(245, 25%, 74%, 0.4);
        --image-border-hover: hsl(245, 25%, 74%);
    }

    *,
    :after,
    :before {
        box-sizing: border-box;
        border: 0 solid #e5e7eb;
    }

    html {
        scroll-behavior: smooth;

        -moz-tab-size: 4;
        -o-tab-size: 4;
        tab-size: 4;
        line-height: 1.5;

        -webkit-text-size-adjust: 100%;
        text-size-adjust: 100%;

        font-family:
            "Inter",
            ui-sans-serif,
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            "Helvetica Neue",
            Arial,
            "Noto Sans",
            sans-serif,
            "Apple Color Emoji",
            "Segoe UI Emoji",
            "Segoe UI Symbol",
            "Noto Color Emoji";
        font-feature-settings: "ss03", "cv02", "cv11";
        font-variation-settings: normal;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: var(--main-bg-color);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        line-height: 1.625;
    }

    blockquote,
    dd,
    dl,
    figure,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    hr,
    p,
    pre {
        margin: 0;
    }

    menu,
    ol,
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    h1,
    h1,
    h2 {
        color: var(--main-headline);
        padding: 0;
    }

    a {
        text-decoration: none;
        color: var(--main-headline);
    }

    p {
        color: var(--text-color);
    }

    h1 {
        letter-spacing: -0.025em;
    }

    img,
    video {
        max-width: 100%;
        height: auto;
    }

    audio,
    canvas,
    embed,
    iframe,
    img,
    object,
    svg,
    video {
        display: block;
        vertical-align: middle;
    }

    .gradient-container {
        background: radial-gradient(
            circle at 0% 0%,
            hsla(251, 100%, 35%, 0.333) 11%,
            rgba(255, 255, 255, 0) 75%
        );
        background-attachment: fixed;
    }

    .main-wrapper {
        max-width: 1280px;
        min-height: 100vh;
        margin-left: auto;
        margin-right: auto;

        padding-top: 3rem;
        padding-bottom: 3rem;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
    }

    .content-hover-container {
        display: none;
        border-radius: 0.375rem;
        z-index: 0;
        top: -1rem;
        bottom: -1rem;
        left: -1rem;
        right: -1rem;
        position: absolute;

        transition-property:
            color,
            background-color,
            border-color,
            text-decoration-color,
            fill,
            stroke,
            opacity,
            box-shadow,
            transform,
            filter,
            backdrop-filter,
            -webkit-backdrop-filter;

        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 0.15s;
    }

    .content-wrapper {
        padding-top: 6rem;
    }

    .content-container {
        position: relative;
        display: grid;

        padding-bottom: 0.25rem;

        transition-property: all;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 0.15s;
    }

    .content-link-container {
        display: none;
        border-radius: 0.25rem;
        top: -0.625rem;
        bottom: -0.625rem;
        left: -1rem;
        right: -1rem;
        position: absolute;
    }

    .content {
        margin-bottom: 4rem;
        scroll-margin-top: 4rem;
    }

    .content-title {
        -webkit-backdrop-filter: blur(8px);
        backdrop-filter: blur(8px);

        position: sticky;
        top: 0;
        z-index: 20;
        margin-left: -1.5rem;
        margin-right: -1.5rem;
        margin-bottom: 1rem;

        padding-left: 1.5rem;
        padding-right: 1.5rem;
        padding-top: 1.25rem;
        padding-bottom: 1.25rem;
        width: 100vw;
    }

    .content-title > h2 {
        font-size: 0.875rem;
        line-height: 1.25rem;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        font-weight: 700;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    .lists-related-links {
        display: flex;
        flex-wrap: wrap;
        margin-top: 0.5rem;
    }

    .list-used-tech {
        display: flex;
        flex-wrap: wrap;
        margin-top: 0.5rem;
    }

    .svg-icon {
        height: 1rem;
        margin-right: 0.5rem;
    }

    /* Utility Classes */
    .mb-12 {
        margin-bottom: 3rem;
    }

    .gap-4 {
        gap: 1rem;
    }

    @media (min-width: 640px) {
        .content-container {
            gap: 2rem;
            grid-template-columns: repeat(8, minmax(0, 1fr));
        }
    }
    /* Just margins */
    @media (min-width: 768px) {
        .main-wrapper {
            /* padding-top: 1rem; */
            padding-top: 5rem;
            padding-bottom: 5rem;
            padding-left: 3rem;
            padding-right: 3rem;
        }

        .content-container {
            gap: 1rem;
        }

        .content-link-container {
            top: -1rem;
            bottom: -1rem;
            left: -1.5rem;
            right: -1.5rem;
        }

        .content-title {
            padding-left: 3rem;
            padding-right: 3rem;
            margin-left: -3rem;
            margin-right: -3rem;
        }

        .content {
            scroll-margin-top: 6rem;
            margin-bottom: 4rem;
        }
    }

    @media (min-width: 1024px) {
        .main-wrapper {
            padding-top: 0;
            padding-bottom: 0;
            padding-left: 6rem;
            padding-right: 6rem;
        }

        .content-container:hover {
            opacity: 1 !important;
        }

        .content-link-container {
            display: block;
            top: -1rem;
            bottom: -1rem;
            left: -1.5rem;
            right: -1.5rem;
        }

        .content-hover-container {
            display: block;
            left: -1.5rem;
            right: -1.5rem;
        }

        .content-container:hover .content-hover-container {
            filter: drop-shadow(0 10px 8px rgba(0, 0, 0, 0.04))
                drop-shadow(0 4px 3px rgba(0, 0, 0, 0.1));
            box-shadow:
                0 0 #0000,
                0 0 #0000,
                inset 0 1px 0 0 rgba(148, 163, 184, 0.1);
            background-color: var(--hover-content-large-screen);
        }

        .content-list:hover .content-container {
            opacity: 0.5;
        }

        .main-flex-container {
            display: flex;
            justify-content: space-between;
            gap: 1rem;
        }

        .content-wrapper {
            padding-top: 6rem;
            padding-bottom: 6rem;
            width: 50%;
        }

        .content-title {
            opacity: 0;
            padding-top: 0;
            padding-bottom: 0;
            padding-left: 0;
            padding-right: 0;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
            top: auto;
            position: relative;
        }

        .content-title > h2 {
            position: absolute;
        }

        .content {
            scroll-margin-top: 6rem;
            margin-bottom: 9rem;
        }
    }
</style>
