---
interface Props {
    lang: string;
    title: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
            rel="stylesheet"
        />

        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    :root {
        --main-bg-color: #121212;
        --main-headline: #fff;
        --secondary-headline-color: hsl(245, 25%, 60%);
        --text-color: hsl(245, 25%, 74%);
        --text-emphasis-color: hsl(214, 32%, 91%);
        --text-label-color: hsl(46, 100%, 50%);
        --link-color: hsl(214, 32%, 91%);
        --hover-link-color: hsl(46, 100%, 50%);
        --label-bg-color: hsl(46, 100%, 50%, 0.1);
        --image-border: hsl(245, 25%, 74%, 0.4);
        --image-border-hover: hsl(245, 25%, 74%);
    }

    *,
    :after,
    :before {
        box-sizing: border-box;
        border: 0 solid #e5e7eb;
    }

    html {
        tab-size: 4;
        line-height: 1.5;
        text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%;
        font-family: "Inter", ui-sans-serif, system-ui;
        font-feature-settings: "ss03", "cv02", "cv11";
        font-variation-settings: normal;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: var(--main-bg-color);
        -webkit-font-smoothing: antialiased;
        scroll-behavior: smooth;
        line-height: 1.625;
    }

    menu,
    ol,
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    h1,
    h1,
    h2 {
        color: var(--main-headline);
        margin: 0;
        padding: 0;
    }

    a {
        text-decoration: none;
        color: var(--main-headline);
    }

    p {
        color: var(--text-color);
    }

    h1 {
        letter-spacing: -0.025em;
    }

    img,
    video {
        max-width: 100%;
        height: auto;
    }

    audio,
    canvas,
    embed,
    iframe,
    img,
    object,
    svg,
    video {
        display: block;
        vertical-align: middle;
    }

    .main-wrapper {
        padding-top: 3rem;
        padding-bottom: 3rem;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
        background: radial-gradient(
            circle at 0% 0%,
            hsla(251, 100%, 35%, 0.363) 11%,
            rgba(255, 255, 255, 0) 75%
        );
        background-attachment: fixed;
    }

    .content-wrapper {
        padding-top: 6rem;
    }

    .content {
        margin-bottom: 4rem;
        scroll-margin-top: 4rem;
    }

    .content-title {
        /* background-color: rgba(15,23,42,.75); */
        /* background-color: var(--main-bg-color); */
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        position: sticky;
        top: 0;
        z-index: 20;
        margin-left: -1.5rem;
        margin-right: -1.5rem;
        margin-bottom: 1rem;

        padding-left: 1.5rem;
        padding-right: 1.5rem;
        padding-top: 1.25rem;
        padding-bottom: 1.25rem;
        width: 100vw;
    }

    .content-title > h2 {
        font-size: 0.875rem;
        line-height: 1.25rem;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        font-weight: 700;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }

    .list-used-tech {
        display: flex;
        flex-wrap: wrap;
        margin-top: 0.5rem;
    }

    /* Utility Classes */
    .mb-12 {
        margin-bottom: 3rem;
    }

    .gap-4 {
        gap: 1rem;
    }
</style>
