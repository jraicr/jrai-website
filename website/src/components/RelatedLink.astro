---
interface Props {
    text: string;
    href: string;
}

const { text, href } = Astro.props;
---

<li class="experience-related-link-element">
    <a
        class="experience-related-link"
        href={href}
        target="_blank"
        rel="noreferrer"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="experience-related-link-icon"
            aria-hidden="true"
        >
            <path
                d="M12.232 4.232a2.5 2.5 0 013.536 3.536l-1.225 1.224a.75.75 0 001.061 1.06l1.224-1.224a4 4 0 00-5.656-5.656l-3 3a4 4 0 00.225 5.865.75.75 0 00.977-1.138 2.5 2.5 0 01-.142-3.667l3-3z"
            >
            </path>
            <path
                d="M11.603 7.963a.75.75 0 00-.977 1.138 2.5 2.5 0 01.142 3.667l-3 3a2.5 2.5 0 01-3.536-3.536l1.225-1.224a.75.75 0 00-1.061-1.06l-1.224 1.224a4 4 0 105.656 5.656l3-3a4 4 0 00-.225-5.865z"
            >
            </path>
        </svg>

        <span>{text}</span>
    </a>
</li>

<style>
    .experience-related-link-element {
        margin-right: 1rem;
    }

    .experience-related-link-icon {
        height: 0.75rem;
        margin-right: 0.25rem;
    }

    .experience-related-link {
        color: var(--text-emphasis-color);
        font-size: 0.875rem;
        font-weight: 500;
        line-height: 1.25rem;
        align-items: center;
        display: inline-flex;
        margin-top: 0.5rem;
        position: relative;
        text-decoration: inherit;
    }

    .experience-related-link:hover {
        color: var(--hover-link-color);
    }
</style>
