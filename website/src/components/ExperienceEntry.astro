---
interface Props {
    date: string;
    companyName: string;
    companyUrl: string;
    role: string;
    oldRole?: string;
}

const { date, companyUrl, companyName, role, oldRole } = Astro.props;
---

<li class="mb-12">
    <div class="content-container">
        <div class="content-hover-container"></div>
        <header class="experience-header" aria-label={date}>
            {date}
        </header>
        <div class="experience-entry">
            <h3 class="experience-heading-text">
                <div>
                    <a href={companyUrl} class="experience-title-link">
                        <span class="content-link-container"></span>
                        <span
                            >{role} Â·
                            <span class="experience-site">{companyName}</span>
                        </span>
                    </a>
                    <div class="old-role">
                        <div>{oldRole}</div>
                    </div>
                </div>
            </h3>

            <slot name="experience-text" />

            <!-- Links to apps, git repo, etc -->
            <slot name="related-links" />

            <!-- Tech used labels -->
            <slot name="tech-label" />
        </div>
    </div>
</li>

<style>
    .experience-container {
        position: relative;
        display: grid;

        padding-bottom: 0.25rem;

        transition-property: all;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 0.15s;
    }

    .experience-header {
        color: var(--secondary-headline-color);
        font-size: 0.75rem;
        font-weight: 600;
        line-height: 1rem;

        letter-spacing: 0.025em;
        text-transform: uppercase;

        z-index: 10;
        margin-bottom: 0.5rem;
        margin-top: 0.25rem;
    }

    .experience-entry {
        z-index: 10;
    }

    .experience-heading-text {
        color: var(--main-headline);
        line-height: 1.375;
        font-weight: 500;
        margin: 0;
        font-size: inherit;
    }

    .experience-title-link {
        color: var(--main-headline);
        line-height: 1.25;
        font-weight: 500;
        font-size: 1rem;
        align-items: baseline;
        display: inline-flex;
        text-decoration: inherit;
    }

    .experience-site {
        display: inline-block;
    }

    .old-role {
        color: var(--secondary-headline-color);
    }

    @media (min-width: 640px) {
        .experience-header {
            grid-column: span 2 / span 2;
        }

        .experience-entry {
            grid-column: span 6 / span 6;
        }
    }
</style>
