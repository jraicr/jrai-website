---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/base/Header.astro";
import About from "@/components/base/About.astro";
import Experience from "@/components/base/Experience.astro";
import Projects from "@/components/base/Projects.astro";
import Footer from "@/components/base/Footer.astro";

const CHRISTMAS_ACTIVATED = true
---

<BaseLayout title="J. Rai" christmasActivated={CHRISTMAS_ACTIVATED} >
    <div class="main-flex-container">
        <Header
            title="J. Rai"
            subtitle="Desarrollador Full Stack y Videojuegos"
            tagline="Construyo experiencias multimedia interactivas centradas en el usuario."
            githubUser="jraicr"
            twitterUser="JRaiDev"
            linkedinUser="jraidev"
            christmasActivated={CHRISTMAS_ACTIVATED}
        />

        <main id="content-container" class="content-wrapper">
            <About />
            <Experience />
            <Projects />
            <Footer />
        </main>
    </div>
</BaseLayout>
