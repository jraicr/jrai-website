---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/base/Header.astro";
import About from "../../components/base/About.astro";
import Experience from "../../components/base/Experience.astro";
import Projects from "../../components/base/Projects.astro";
---

<BaseLayout title="J. Rai" lang="en">
    <div class="gradient-container">
        <div class="main-wrapper">
            <div class="main-flex-container">
                <Header
                    title="J. Rai"
                    subtitle="Desarrollador Full Stack y de juegos"
                    tagline="Construyo experiencias multimedia interactivas centradas en la experiencia del usuario."
                    githubUser="jraicr"
                    twitterUser="JRaiDev"
                    linkedinUser="SIN CONFIGURAR"
                />

                <main id="content-container" class="content-wrapper">
                    <About />
                    <Experience />
                    <Projects />
                </main>
            </div>
        </div>
    </div>
</BaseLayout>
